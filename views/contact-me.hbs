              <a class="btn bg-black text-white" href="/contact">Contact Me</a>
          </div>
        </div>
    </nav>
    <!--End Navbar -->
    <!-- Contact Form -->
    <div class="container-contact-form d-flex justify-content-center align-items-center">
    <form>
    <h1 class="text-center">GET IN TOUCH</h1>
    <div class="mb-1">
      <label for="input-name" class="form-label">Name</label>
      <input type="text" class="form-control" id="input-name" name="name" placeholder="Your Name is...">
    </div>
    <div class="mb-1">
      <label for="input-emai" class="form-label">Email address</label>
      <input type="email" class="form-control" id="input-email" name="email" placeholder="name@example.com">
    </div>
    <div class="mb-1">
      <label for="input-phone" class="form-label">Phone Number</label>
      <input type="number" class="form-control" id="input-phone" name="phone" placeholder="6285xxxxx">
    </div>
    <div class="mb-1">
    <label for="choose-subject">Subject</label>
    <select name="subject" class="form-select" id="choose-subject" aria-label="Default select example">
      <option value="">Choose Subject</option>
      <option value="Talk">Talk</option>
      <option value="Collaboration">Collaboration</option>
      <option value="Create Project">Create Project</option>
    </select>
  </div>
    <div class="mb-1">
      <label for="input-message" class="form-label">Your Message</label>
      <textarea class="form-control" id="input-message" name="message" rows="3" placeholder="Your Message..."></textarea>
    </div>
    <div class="text-end mt-2">
    <a onclick='kirimForm()' class="btn bg-black text-white">Submit</a>
    </div>
  </form>


